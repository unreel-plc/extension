{
  "manifest_version": 3,
  "name": "Unreel",
  "version": "1.0.0",
  "description": "Bookmark social media reels and shorts from YouTube, Instagram, TikTok, and Facebook in one organized place",
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_title": "Unreel Extension"
  },
  "background": {
    "service_worker": "src/scripts/background.ts"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "windows",
    "storage",
    "sidePanel",
    "webNavigation",
    "notifications",
    "identity"
  ],
  "host_permissions": [
    "https://naod.me/*",
    "http://localhost:3000/*",
    "http://localhost:5173/*"
  ],
  "oauth2": {
    "client_id": "212436644667-gq6uib92lbu39pgeo70se57jntqnjudl.apps.googleusercontent.com",
    "scopes": ["openid", "profile", "email"]
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["src/scripts/content-scripts/youtube/youtube-shorts.tsx"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["src/scripts/content-scripts/instagram/instagram-reels.tsx"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.tiktok.com/*"],
      "js": ["src/scripts/content-scripts/tiktok/tiktok.tsx"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://web.facebook.com/*"],
      "js": ["src/scripts/content-scripts/facebook/fb.tsx"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["redirect.html"],
      "matches": ["*://*/*"]
    },
    {
      "resources": [
        "src/scripts/content-scripts/shared/spa-detector.js",
        "src/index.css"
      ],
      "matches": [
        "https://www.instagram.com/*",
        "https://www.tiktok.com/*",
        "https://web.facebook.com/*"
      ]
    }
  ],

  "icons": {
    "16": "extension_icon16.png",
    "32": "extension_icon32.png",
    "48": "extension_icon48.png",
    "128": "extension_icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
